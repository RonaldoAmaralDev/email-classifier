{
  "version": 2,
  "builds": [
    {
      "src": "backend/main.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb"
      }
    },
    {
      "src": "frontend/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/static/css/(.*)",
      "dest": "/frontend/css/$1"
    },
    {
      "src": "/static/js/(.*)",
      "dest": "/frontend/js/$1"
    },
    {
      "src": "/api/(.*)",
      "dest": "/backend/main.py"
    },
    {
      "src": "/health",
      "dest": "/backend/main.py"
    },
    {
      "src": "/docs",
      "dest": "/backend/main.py"
    },
    {
      "src": "/openapi.json",
      "dest": "/backend/main.py"
    },
    {
      "src": "/",
      "dest": "/frontend/index.html"
    }
  ]
}
